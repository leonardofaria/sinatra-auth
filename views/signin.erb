<form action='/signin' method='post' class="form-group">
  <div class="container mx-auto h-full flex justify-center items-center">
    <div class="w-1/3">
      <h2 class="text-2xl mb-6 text-center">Sign in</h2>

      <%= erb :form %>

      <% if signup_enabled? %>
        <div class="text-center">
          <p class="text-grey-dark text-sm">Don't have an account? <a href="/signup" class="text-blue font-bold">Create an Account</a>.</p>
        </div>
      <% end %>
    </div>
  </div>
</form>
